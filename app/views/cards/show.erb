<div id='card'>

	<div id='answer' class='<%= params[:correct] %>'>
				<% if params[:correct] == 'true' %>
			  Correct.
			  <% elsif params[:correct] == 'false' %>
			  Wrong.
			  <% end %>
	</div>

	<div class='question'><%= @card.question %>
		<div class='guess'>
			<form id='guess' method='post' action='/rounds/<%= params[:round_id] %>/cards/<%= @card.id %>'>
				<input type="text" name="guess">
			</form>
	</div>

</div>
	

